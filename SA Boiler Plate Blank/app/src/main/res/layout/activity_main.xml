<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Reminder"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Reminder" />

    <Button
        android:id="@+id/PatientLog"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Patient Log" />

    <TextView
        android:id="@+id/currentState"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/careGiverButton"
        android:layout_marginTop="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp"
        android:text="Beep Boop"
        android:textSize="36sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:text="Create User" />

    <Switch
        android:id="@+id/careGiverButton"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/symptomtext"
        android:text="caregiver" />

    <TextView
        android:id="@+id/symptomtext"
        android:layout_width="126dp"
        android:layout_height="192dp"
        android:layout_above="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/careGiverButton"
        android:baselineAligned="false"
        android:text="TextView" />

</RelativeLayout>